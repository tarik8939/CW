@model IEnumerable<CW.Models.Worker>

@{
    ViewData["Title"] = "All workers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">All workers</h1>

<p>
    <a asp-action="Create">Add new worker</a>
</p>
<table class="table table-bordered table-hover" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkerFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkerFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Role1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorkerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
