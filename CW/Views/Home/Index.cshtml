                <div class="col-md-12 m-1 p-1">
                    @Html.ActionLink("Schedules", "Index", "Schedules", new {}, new {@class = "col-md-6 btn btn-primary"})
                </div>
                <div class="col-md-12 m-1 p-1">
                    @Html.ActionLink("Workers", "Index", "Workers", new {}, new {@class = "col-md-6 btn btn-primary"})
                </div>
