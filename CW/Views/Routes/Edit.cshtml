@model CW.Models.Route

@{
    ViewData["Title"] = "Edit route";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Edit route</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RouteId" />
            <div class="form-group">
                @Html.HiddenFor(x=>x.DateAdded)
            </div>
            <div class="form-group">
                <label asp-for="CityFrom" class="control-label"></label>
                <select asp-for="CityFrom" class="form-control" asp-items="ViewBag.CityFrom"></select>
                <span asp-validation-for="CityFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityTo" class="control-label"></label>
                <select asp-for="CityTo" class="form-control" asp-items="ViewBag.CityTo"></select>
                <span asp-validation-for="CityTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfRoute" class="control-label"></label>
                <input asp-for="NumberOfRoute" class="form-control" />
                <span asp-validation-for="NumberOfRoute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
