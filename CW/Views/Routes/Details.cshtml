@model CW.Models.Route

@{
    ViewData["Title"] = "Details about route";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Details about route</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mileage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mileage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfRoute)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfRoute)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CityFromNavigation.City1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CityFromNavigation.City1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CityToNavigation.City1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CityToNavigation.City1)
        </dd>
        <dd>

        </dd>
        <div>
            @if (@User.Identity.IsAuthenticated == true && (@User.IsInRole("Admin")))
            {
                <a asp-action="AddStop" asp-route-id="@Model.RouteId" class="btn btn-outline-primary">Add stop</a>
            }
            @if (@User.Identity.IsAuthenticated == true && (@User.IsInRole("Admin")))
            {
                <a asp-action="Edit" asp-route-id="@Model.RouteId" class="btn btn-outline-primary">Edit</a>
            }
            <a asp-action="SeeStops" asp-route-id="@Model.RouteId" class="btn btn-outline-primary">See stops</a>
            <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
        </div>
    </dl>
</div>
