@model IEnumerable<CW.Models.Schedule>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.StartDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.EndDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.TimeInTravel)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.Transport.TransportName)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.Worker.WorkerFullName)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem =>item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem =>item.EndDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem =>item.TimeInTravel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transport.TransportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> item.Worker.WorkerFullName)
            </td>

            @if (@User.Identity.IsAuthenticated == true && (@User.IsInRole("Admin")))
            {
        <td>
            <a asp-action="Edit" asp-controller="Schedules" asp-route-id="@item.ScheduleId">Edit</a>
            <a asp-action="Delete" asp-controller="Schedules" asp-route-id="@item.ScheduleId">Edit</a>
        </td>
            }

        </tr>
    }
    </tbody>

</table>
