@model CW.Models.Schedule

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Worker" class="control-label"></label>
                <select asp-for="WorkerId" class ="form-control" asp-items="ViewBag.Worker"></select>
            </div>
            <div class="form-group">
                <label asp-for="Route" class="control-label"></label>
                <select asp-for="RouteId" class ="form-control" asp-items="ViewBag.Route"></select>
            </div>
            <div class="form-group">
                <label asp-for="Transport" class="control-label"></label>
                <select asp-for="TransportId" class ="form-control" asp-items="ViewBag.Transport"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDateTime" class="control-label"></label>
                <input asp-for="StartDateTime" class="form-control" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
